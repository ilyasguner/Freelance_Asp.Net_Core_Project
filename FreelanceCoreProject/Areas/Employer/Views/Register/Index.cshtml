
@model FreelanceCoreProject.Areas.Employer.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/skydash/template/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash/template/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash/template/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/skydash/template/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/skydash/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash/template/images/logo.svg" alt="logo">
                            </div>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <label>Adınız</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input type="text" asp-for="Name" class="form-control" placeholder="Ad"/>
                                </div>
                                <div class="form-group">
                                    <label>Soyadınız</label>
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                    <input type="text" asp-for="Surname" class="form-control" placeholder="Soyad"/>
                                </div>
                                <div class="form-group">
                                    <label>Kullanıcı Adınız</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    <input type="text" asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı"/>
                                </div>
                                <div class="form-group">
                                    <label>Resim Yolunuz</label>
                                    <span asp-validation-for="ImagerUrl" class="text-danger"></span>
                                    <input type="text" asp-for="ImagerUrl" class="form-control" placeholder="Dosya Yolunu Giriniz"/>
                                </div>
                                <div class="form-group">
                                    <label>Şifreniz</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input type="text" asp-for="Password" class="form-control" placeholder="Şifre"/>
                                </div>
                                <div class="form-group">
                                    <label>Şifre Tekrar</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <input type="text" asp-for="ConfirmPassword" class="form-control" placeholder="Şifrenizi Tekrar Giriniz"/>
                                </div>
                                <div class="form-group">
                                    <label>E Mail</label>
                                    <span asp-validation-for="Mail" class="text-danger"></span>
                                    <input type="text" asp-for="Mail" class="form-control" placeholder="Email Adresi"/>
                                </div>
                                <label>
                                    <input type="radio" asp-for="EmployerRole" name="EmployerRole" value="1"/>İş Veren
                                </label>
                                <label>
                                    <input type="radio" asp-for="EmployerRole" name="EmployerRole" value="2" />Çalışan
                                </label>
                                <div class="mt-3">
                                    <button class="btn btn-success">Kayıt Ol</button>
                                    @* <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"
                                    href="~/skydash-free-bootstrap-admin-template-main/index.html">SIGN UP</a> *@
                                </div>
                                @* <div class="text-center mt-4 font-weight-light">
                                Already have an account? <a href="login.html" class="text-primary">Login</a>
                                </div> *@
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
</body>

</html>


