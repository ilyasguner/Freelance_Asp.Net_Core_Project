<script>
    // Ara butonuna tıklandığında çalışacak fonksiyon
    document.getElementById("platformButton").addEventListener("click", function () {
        // Seçili değeri al
        var selectedValue = document.getElementById("platformSelect").value;

        // Seçili değeri kontrol et
        if (selectedValue) {
            // Seçili değeri kullanarak URL'yi oluştur
            var url = "/JobFilter/PlatformFilter/" + selectedValue;

            // <a> elementinin href özelliğini değiştir
            document.getElementById("platformLink").href = url;
        } else {
            // Kullanıcı bir seçim yapmadıysa uyarı verebilirsiniz
            alert("Lütfen bir platform seçiniz.");
        }
    });
</script>
