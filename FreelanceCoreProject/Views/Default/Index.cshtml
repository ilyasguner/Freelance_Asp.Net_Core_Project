									<li><a href="/JobFilter/PlatformFilter/5">Python</a></li>
								</ul>
							</li>
							<li><a class="ticker-btn" href="/Employer/Register/Index/">Kayıt Ol</a></li>
							<li><a class="ticker-btn" href="/Employer/Login/Index/">Giriş Yap</a></li>				          				          
				        </ul>
				      </nav><!-- #nav-menu-container -->		    		
			    	</div>
			    </div>
			  </header><!-- #header -->
			@await Component.InvokeAsync("PlatformSection")
			<!-- start banner Area -->
			
			<!-- End banner Area -->	

			<!-- Start features Area -->
			<section class="features-area">
				<div class="container">
					<div class="row">
						<div class="col-lg-3 col-md-6">
							<div class="single-feature">
								<h4>İş İlanı</h4>
								<p>
									Yaptırmak istediğiniz yazılım işi için ilan açabilirsiniz.
								</p>
							</div>
						</div>
						<div class="col-lg-3 col-md-6">
							<div class="single-feature">
								<h4>İş Alma</h4>
								<p>
									İş ilanlarından size göre olan işlere teklif verebilirsiniz.
								</p>
							</div>
						</div>
						<div class="col-lg-3 col-md-6">
							<div class="single-feature">
								<h4>Güvenlik</h4>
								<p>
									Hesap güvenliğinizi ve ödeme güvenliğiniz emin ellerde.
								</p>
							</div>
						</div>
						<div class="col-lg-3 col-md-6">
							<div class="single-feature">
								<h4>Şeffaflık</h4>
								<p>
									Verilen ve alınan işler hesabınızda görüntülenebilir ve ödemelerinizi takip edebilirsiniz.
								</p>
							</div>
						</div>																		
					</div>
				</div>	
			</section>
			<!-- End features Area -->
			
			<!-- Start feature-cat Area -->

			@await Component.InvokeAsync("CategorySection")
			<!-- End feature-cat Area -->
			
			<!-- Start post Area -->
			<section class="post-area section-gap">
				<div class="container">
					<div class="row justify-content-center d-flex">
						<div class="col-lg-8 post-list">
							<ul class="cat-list">
								<li><a href="/JobFilter/TamZamanli/">Tam Zamanlı</a></li>
						<li><a href="/JobFilter/YariZamanli/">Yarı Zamanlı</a></li>
							</ul>
						@await Component.InvokeAsync("JobList")
							
							@* <a class="text-uppercase loadmore-btn mx-auto d-block" href="">Daha Fazla İş</a> *@

						</div>
						<div class="col-lg-4 sidebar">
							@await Component.InvokeAsync("JobByPlatform")

							@await Component.InvokeAsync("JobByCategory")
						</div>
					</div>
				</div>	
			</section>
			<!-- End post Area -->
				

			<!-- Start callto-action Area -->
			<section class="callto-action-area section-gap" id="join">
				<div class="container">
					<div class="row d-flex justify-content-center">
						<div class="menu-content col-lg-9">
							<div class="title text-center">
								<h1 class="mb-10 text-white">Hiç tereddüt etmeden bugün bize katılın</h1>
								<p class="text-white">İster hayalinizdeki yazılımı gerçekleştirmek isteyen olun,isterseniz yeteneklerinizi sergilemek isteyen bir yazılım geliştirici olun.</p>
								<a class="primary-btn" href="/Employer/Register/Index/">İş Veren</a>
								<a class="primary-btn" href="/Employer/Register/Index/">Yazılım Geliştirici</a>
							</div>
						</div>
					</div>	
				</div>	
			</section>
			<!-- End calto-action Area -->

		
			<!-- start footer Area -->		
			@await Html.PartialAsync("FooterPartial")
			<!-- End footer Area -->

			@await Html.PartialAsync("ScriptPartial")
</body>
	</html>




